<!-- register Modal -->
<div class="modal fade" id="register" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="registerTitle">注册</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal"
                      name="signUpForm"
                      id="signUpform"
                      action="/sign-up"
                      method="POST">
                    <div class="form-group">
                        <!--<label for="register_email" class="col-sm-2 control-label">Email</label>-->
                        <div class="col-sm-12">
                            <input type="tel"
                                   name="register-tel"
                                   class="form-control"
                                   id="phone"
                                   placeholder="请输入正确的手机号码">
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="inputPassword3" class="col-sm-2 control-label">Password</label>-->
                        <div class="col-sm-12">
                            <input type="password"
                                   name="register-pwd"
                                   class="form-control"
                                   id="register_pwd"
                                   placeholder="请输入密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="inputPassword3" class="col-sm-2 control-label">Password</label>-->
                        <div class="col-sm-12">
                            <input type="password"
                                   name="register-repwd"
                                   class="form-control"
                                   id="register_repwd"
                                   placeholder="重新输入密码">
                        </div>
                    </div>
                    <div class="form-group">
                        <!--<label for="inputPassword3" class="col-sm-2 control-label">Password</label>-->
                        <div class="col-sm-12">
                            <input type="password"
                                   name="register-vcode"
                                   class="form-control"
                                   id="register_vcode"
                                   placeholder="验证码">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-10 col-sm-12">
                            <input type="button"
                                   name="signUp"
                                   class="btn btn-default"
                                   onclick="validatorSignUpForm();"
                                   value="注册"
                            >
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>